{
  "compilerOptions": {
    "strict": false,
    "verbatimModuleSyntax": true,
    "noEmit": false,
    "skipLibCheck": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": [
      "node"
    ],
    "paths": {
      "@/*": ["./src/*"],
    },
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react-jsx"
  },
  "exclude": [
    "node_modules",
    "dist",
    "static",
    "src/app/**/*"
  ],
  "include": [
    "src/index.ts",
    "src/www/**/*"
  ]
}